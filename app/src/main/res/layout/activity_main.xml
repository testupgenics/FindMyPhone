<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.encodersolutions.findmyphone.MainActivity">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/normalMode"
        android:text="@string/normal_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:layout_margin="16dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvNormalMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normalMode">

        <TextView
            android:id="@+id/tvNormalMode"
            android:text="@string/enable_normal_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/turnAlarm"
        android:text="@string/play_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvNormalMode"
        android:padding="16dp"
        android:layout_margin="16dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvTurnAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turnAlarm">

        <TextView
            android:id="@+id/tvTurnAlarm"
            android:text="@string/enable_play_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvHowTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/howTo"
            android:text="@string/how_to_use"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />
    </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
